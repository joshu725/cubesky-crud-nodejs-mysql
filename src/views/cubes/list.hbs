<div class="container px-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-6">
            <div class="text-center my-5">
                <h1 class="display-5 fw-bolder .text-dark-emphasis mb-2">Lista de cubos</h1>
            </div>
        </div>
    </div>
</div>

<div class="container p-0">
    <div class="row">
            <div class="col-md-11 mx-auto">
                <table class="table table-striped table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Marca</th>
                            <th>Forma</th>
                            <th>Nivel</th>
                            <th>Descripción</th>
                            <th>Creación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cubes}}
                            <tr class="bg-light">
                                <td>{{id}}</td>
                                <td>{{nombre}}</td>
                                <td>{{marca}}</td>
                                <td>{{forma}}</td>
                                <td>{{nivel}}</td>
                                <td>{{descripcion}}</td>
                                <td>{{timeago fecha_creacion}}</td>
                                <td><a href="/cubes/edit/{{id}}" class="btn btn-secondary">Editar</a> <a href="/cubes/delete/{{id}}" class="btn btn-danger">Eliminar</a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
    </div>
</div>

<div class="container p-4">
    <div class="row">
        <div class="col-md-2 mx-auto">
            <a href="/cubes/add">
                <button class="btn btn-success">Nuevo cubo</button>
            </a>
        </div>
    </div>
</div>