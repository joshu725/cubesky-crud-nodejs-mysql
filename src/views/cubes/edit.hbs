<div class="container px-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-6">
            <div class="text-center my-5">
                <h1 class="display-5 fw-bolder .text-dark-emphasis mb-2">Editar cubo</h1>
            </div>
        </div>
    </div>
</div>

<div class="container p-0">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    {{!--Se configura el método de envío en formularios--}}
                    <form action="/cubes/edit/{{cube.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{cube.nombre}}" class="form-control" name="nombre" placeholder="Nombre" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{cube.marca}}" class="form-control" name="marca" placeholder="Marca" required>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{cube.forma}}" class="form-control" name="forma" placeholder="Forma" required>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{cube.nivel}}" class="form-control" name="nivel" placeholder="Nivel" required>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="3" class="form-control" placeholder="Descripción" required>{{cube.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <div class="d-grid gap-2">
                                <button class="btn btn-success">Editar</button>
                            </div>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>